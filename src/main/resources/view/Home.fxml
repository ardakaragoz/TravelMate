<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.travelmate.travelmate.controller.HomeController">
    <children>

        <BorderPane fx:id="mainContainer" style="-fx-background-color: #FFF7EA;">

            <top>
                <fx:include source="TopBar.fxml"/>
            </top>

            <left>
                <VBox prefHeight="640.0" prefWidth="300.0" spacing="10.0" BorderPane.alignment="CENTER">
                    <padding><Insets bottom="20.0" left="20.0" right="20.0" top="30.0" /></padding>
                    <children>

                        <fx:include source="Sidebar.fxml"/>

                        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" style="-fx-background-color: WHITE; -fx-border-color: BLACK; -fx-border-width: 2; -fx-background-radius: 15; -fx-border-radius: 15;">
                            <children>
                                <HBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Label text="Leaderboard" underline="true">
                                            <font><Font name="System Bold" size="20.0" /></font>
                                        </Label>
                                        <Button onAction="#handleHelpButton" mnemonicParsing="false" style="-fx-background-color: #CCFF00; -fx-background-radius: 50; -fx-min-width: 30px;" text="?">
                                            <font><Font name="System Bold" size="14.0" /></font>
                                        </Button>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Button mnemonicParsing="false" style="-fx-background-color: #CCFF00; -fx-background-radius: 10;" text="All-time">
                                            <font><Font name="System Bold" size="12.0" /></font>
                                        </Button>
                                        <Button mnemonicParsing="false" style="-fx-background-color: transparent;" text="Monthly">
                                            <font><Font size="12.0" /></font>
                                        </Button>
                                    </children>
                                </HBox>
                                <VBox fx:id="leaderboardContainer" spacing="5.0" />
                            </children>
                            <padding><Insets bottom="10.0" left="15.0" right="15.0" top="10.0" /></padding>
                            <effect><DropShadow offsetX="5.0" offsetY="5.0" radius="0.0" /></effect>
                            <VBox.margin><Insets top="10.0" /></VBox.margin>
                        </VBox>

                    </children>
                </VBox>
            </left>

            <center>
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background: #FFF7EA; -fx-border-color: transparent;" BorderPane.alignment="CENTER">
                    <content>
                        <VBox spacing="30.0" style="-fx-background-color: #FFF7EA;">
                            <padding><Insets bottom="30.0" right="30.0" top="30.0" /></padding>
                            <children>
                                <Label text="Promoted Cities"><font><Font size="18.0" /></font></Label>
                                <HBox alignment="CENTER" prefHeight="250.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #FFE6CC; -fx-background-radius: 20; -fx-border-color: #1E3A5F; -fx-border-width: 3; -fx-border-radius: 20;">
                                    <children>
                                        <Button mnemonicParsing="false" style="-fx-background-color: #CCFF00; -fx-background-radius: 50;" text="&lt;">
                                            <font><Font name="System Bold" size="24.0" /></font>
                                            <effect><DropShadow offsetX="2.0" offsetY="2.0" radius="0.0" /></effect>
                                        </Button>
                                        <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="300.0" spacing="20.0">
                                            <children>
                                                <Label style="-fx-background-color: #1E3A5F; -fx-background-radius: 10; -fx-padding: 5 20 5 20;" text="ROME" textFill="#ccff00">
                                                    <font><Font name="System Italic" size="40.0" /></font>
                                                </Label>
                                                <Label text="Average Budget: 800$">
                                                    <font><Font name="System Bold Italic" size="18.0" /></font>
                                                </Label>
                                                <Label text="Compatibility Score: %70">
                                                    <font><Font name="System Bold" size="14.0" /></font>
                                                </Label>
                                            </children>
                                        </VBox>
                                        <Button mnemonicParsing="false" style="-fx-background-color: #CCFF00; -fx-background-radius: 50;" text="&gt;">
                                            <font><Font name="System Bold" size="24.0" /></font>
                                            <effect><DropShadow offsetX="2.0" offsetY="2.0" radius="0.0" /></effect>
                                        </Button>
                                    </children>
                                    <effect><DropShadow offsetX="5.0" offsetY="5.0" radius="0.0" /></effect>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <TextField promptText="Search city, date, budget..." style="-fx-background-radius: 20; -fx-border-color: #1E3A5F; -fx-border-radius: 20; -fx-border-width: 2;" HBox.hgrow="ALWAYS">
                                            <font><Font size="18.0" /></font>
                                            <padding><Insets bottom="10.0" left="20.0" right="20.0" top="10.0" /></padding>
                                        </TextField>
                                        <Button mnemonicParsing="false" style="-fx-background-color: transparent;" text="Y">
                                            <font><Font name="System Bold" size="24.0" /></font>
                                        </Button>
                                    </children>
                                </HBox>
                                <Label text="Available Trips"><font><Font name="System Bold" size="22.0" /></font></Label>
                                <VBox fx:id="tripsContainer" spacing="20.0" />
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
            </center>

        </BorderPane>

        <VBox fx:id="helpPopup" visible="false" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="450.0" prefWidth="550.0" spacing="20.0" style="-fx-background-color: WHITE; -fx-background-radius: 20; -fx-border-color: #1E3A5F; -fx-border-width: 2; -fx-border-radius: 20;">
            <children>
                <Label text="How to Earn Points?" textFill="#1e3a5f" underline="true">
                    <font><Font name="System Bold" size="28.0" /></font>
                </Label>
                <VBox spacing="10.0" alignment="CENTER_LEFT" maxWidth="450.0">
                    <children>
                        <HBox spacing="10"><Label text="• Completing a trip with a mate:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/><Region HBox.hgrow="ALWAYS"/><Label text="+50" textFill="#2ecc71" style="-fx-font-size: 16px; -fx-font-weight: bold;"/></HBox>
                        <HBox spacing="10"><Label text="• Completing biography &amp; hobbies:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/><Region HBox.hgrow="ALWAYS"/><Label text="+25" textFill="#2ecc71" style="-fx-font-size: 16px; -fx-font-weight: bold;"/></HBox>
                        <HBox spacing="10"><Label text="• Receiving a 4-5 star review:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/><Region HBox.hgrow="ALWAYS"/><Label text="+20" textFill="#2ecc71" style="-fx-font-size: 16px; -fx-font-weight: bold;"/></HBox>
                        <HBox spacing="10"><Label text="• Writing a review for a mate:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/><Region HBox.hgrow="ALWAYS"/><Label text="+15" textFill="#2ecc71" style="-fx-font-size: 16px; -fx-font-weight: bold;"/></HBox>
                        <HBox spacing="10"><Label text="• Posting a trip request:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/><Region HBox.hgrow="ALWAYS"/><Label text="+10" textFill="#2ecc71" style="-fx-font-size: 16px; -fx-font-weight: bold;"/></HBox>
                    </children>
                </VBox>
                <Button onAction="#closeHelpPopup" text="Close" style="-fx-background-color: #CCFF00; -fx-background-radius: 20; -fx-font-weight: bold; -fx-font-size: 16px; -fx-cursor: hand;">
                    <padding><Insets bottom="10.0" left="40.0" right="40.0" top="10.0" /></padding>
                    <effect><DropShadow offsetX="3.0" offsetY="3.0" radius="0.0" color="#00000040"/></effect>
                </Button>
            </children>
            <effect><DropShadow radius="20.0" color="#00000080"/></effect>
        </VBox>

    </children>
</StackPane>