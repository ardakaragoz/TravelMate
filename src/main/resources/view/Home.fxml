<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.travelmate.travelmate.controller.HomeController">
    <children>

        <BorderPane fx:id="mainContainer" style="-fx-background-color: #FFF7EA;">

            <top>
                <fx:include source="TopBar.fxml" />
            </top>

            <left>
                <VBox prefHeight="640.0" prefWidth="300.0" spacing="10.0" BorderPane.alignment="CENTER">
                    <padding><Insets bottom="20.0" left="20.0" right="20.0" top="30.0" /></padding>
                    <children>

                        <fx:include fx:id="sidebar" source="Sidebar.fxml" />

                        <VBox prefHeight="240.0" prefWidth="100.0" spacing="10.0" style="-fx-background-color: #FFE7C2; -fx-border-color: #253A63; -fx-border-width: 2; -fx-background-radius: 15; -fx-border-radius: 15;">
                            <children>
                                <HBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Label text="Leaderboard" underline="true" textFill="#253A63">
                                            <font><Font name="System Bold" size="20.0" /></font>
                                        </Label>
                                        <Button mnemonicParsing="false" onAction="#handleHelpButton" style="-fx-background-color: #CCFF00; -fx-background-radius: 50; -fx-min-width: 30px; -fx-text-fill: #253A63;" text="?">
                                            <font><Font name="System Bold" size="14.0" /></font>
                                            <effect><DropShadow color="#00000020" offsetX="2.0" offsetY="2.0" /></effect>
                                        </Button>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Button mnemonicParsing="false" style="-fx-background-color: #CCFF00; -fx-background-radius: 10; -fx-text-fill: #253A63;" text="All-time">
                                            <font><Font name="System Bold" size="12.0" /></font>
                                        </Button>
                                        <Button mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #253A63;" text="Monthly">
                                            <font><Font size="12.0" /></font>
                                        </Button>
                                    </children>
                                </HBox>
                                <VBox fx:id="leaderboardContainer" spacing="5.0" />
                            </children>
                            <padding><Insets bottom="10.0" left="15.0" right="15.0" top="10.0" /></padding>
                            <effect><DropShadow color="#00000015" offsetX="5.0" offsetY="5.0" radius="0.0" /></effect>
                            <VBox.margin><Insets top="10.0" /></VBox.margin>
                        </VBox>
                    </children>
                </VBox>
            </left>

            <center>
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background: #FFF7EA; -fx-border-color: transparent;" BorderPane.alignment="CENTER">
                    <content>
                        <VBox spacing="25.0" style="-fx-background-color: #FFF7EA;">
                            <padding><Insets bottom="30.0" right="30.0" top="30.0" /></padding>
                            <children>

                                <Label text="Promoted Cities" textFill="#253A63"><font><Font name="System Bold" size="20.0" /></font></Label>

                                <HBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Button onAction="#handlePrevPromoted" mnemonicParsing="false" style="-fx-background-color: #CCFF00; -fx-background-radius: 50; -fx-min-width: 40px; -fx-min-height: 40px; -fx-text-fill: #253A63;" text="&lt;">
                                            <font><Font name="System Bold" size="20.0" /></font>
                                            <effect><DropShadow color="#00000020" offsetX="2.0" offsetY="2.0" radius="0.0" /></effect>
                                        </Button>

                                        <HBox alignment="CENTER_LEFT" prefHeight="220.0" prefWidth="800.0" style="-fx-background-color: #FFE7C2; -fx-background-radius: 20; -fx-border-color: #253A63; -fx-border-width: 2; -fx-border-radius: 20;" HBox.hgrow="ALWAYS">
                                            <children>
                                                <VBox alignment="CENTER_LEFT" spacing="15.0" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label fx:id="promotedCityNameLabel" style="-fx-background-color: #253A63; -fx-background-radius: 10; -fx-padding: 5 20 5 20; -fx-text-fill: #CCFF00;" text="ROME">
                                                            <font><Font name="System Italic" size="40.0" /></font>
                                                        </Label>
                                                        <Label fx:id="averageBudgetLabel" text="Average Budget: 800$" textFill="#253A63">
                                                            <font><Font name="System Bold Italic" size="18.0" /></font>
                                                        </Label>
                                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                            <children>
                                                                <Label text="Compatibility Score:" textFill="#253A63">
                                                                    <font><Font name="System Bold" size="14.0" /></font>
                                                                </Label>
                                                                <ProgressBar fx:id="compatibilityScoreBar" prefWidth="150.0" progress="0.7" style="-fx-accent: #253A63; -fx-control-inner-background: #FFF;" />
                                                                <Label fx:id="compalibilityScoreLabel" text="\%70" textFill="#253A63"><font><Font name="System Bold" size="14.0" /></font></Label>
                                                            </children>
                                                        </HBox>
                                                    </children>
                                                    <padding><Insets left="30.0" /></padding>
                                                </VBox>

                                                <StackPane alignment="CENTER" maxHeight="200.0" maxWidth="280.0" minHeight="200.0" minWidth="280.0" style="-fx-background-color: #FFF7EA; -fx-background-radius: 20;">
                                                    <children>
                                                        <ImageView fx:id="promotedCitiesCityImage" fitHeight="300.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" />
                                                    </children>
                                                    <clip>
                                                        <Rectangle arcHeight="30.0" arcWidth="30.0" height="200.0" width="280.0" />
                                                    </clip>
                                                    <StackPane.margin><Insets right="10.0" /></StackPane.margin>
                                                </StackPane>
                                            </children>
                                            <effect><DropShadow color="#00000015" offsetX="5.0" offsetY="5.0" radius="0.0" /></effect>
                                        </HBox>

                                        <Button onAction="#handleNextPromoted" mnemonicParsing="false" style="-fx-background-color: #CCFF00; -fx-background-radius: 50; -fx-min-width: 40px; -fx-min-height: 40px; -fx-text-fill: #253A63;" text="&gt;">
                                            <font><Font name="System Bold" size="20.0" /></font>
                                            <effect><DropShadow color="#00000020" offsetX="2.0" offsetY="2.0" radius="0.0" /></effect>
                                        </Button>
                                    </children>
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <TextField fx:id="searchField" promptText="Search city, date, budget..." style="-fx-background-radius: 20; -fx-border-color: #253A63; -fx-border-radius: 20; -fx-border-width: 2; -fx-text-fill: #253A63;" HBox.hgrow="ALWAYS">
                                            <font><Font size="18.0" /></font>
                                            <padding><Insets bottom="10.0" left="20.0" right="20.0" top="10.0" /></padding>
                                        </TextField>
                                        <Button mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #253A63;" text="Y">
                                            <font><Font name="System Bold" size="24.0" /></font>
                                        </Button>
                                    </children>
                                </HBox>

                                <Label text="Available Trips" textFill="#253A63"><font><Font name="System Bold" size="22.0" /></font></Label>

                                <VBox fx:id="tripsContainer" spacing="20.0" />

                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
            </center>

        </BorderPane>

        <VBox fx:id="helpPopup" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="450.0" prefWidth="550.0" spacing="20.0" style="-fx-background-color: #FFE6CC; -fx-background-radius: 20; -fx-border-color: #253A63; -fx-border-width: 2; -fx-border-radius: 20;" visible="false">
            <children>
                <Label text="How to Earn Points?" textFill="#253A63" underline="true">
                    <font><Font name="System Bold" size="28.0" /></font>
                </Label>
                <Button onAction="#closeHelpPopup" style="-fx-background-color: #CCFF00; -fx-background-radius: 20; -fx-font-weight: bold; -fx-font-size: 16px; -fx-cursor: hand; -fx-text-fill: #253A63;" text="Close">
                    <padding><Insets bottom="10.0" left="40.0" right="40.0" top="10.0" /></padding>
                </Button>
            </children>
            <effect><DropShadow color="#00000080" radius="20.0" /></effect>
        </VBox>

    </children>
</StackPane>