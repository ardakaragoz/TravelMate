<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.travelmate.travelmate.controller.PostTripController">
    <children>
        <BorderPane fx:id="mainContainer" style="-fx-background-color: #FFF7EA;">

            <top>
                <fx:include source="TopBar.fxml" />
            </top>

            <left>
                <VBox prefHeight="640.0" prefWidth="300.0" spacing="10.0" BorderPane.alignment="CENTER">
                    <padding><Insets bottom="20.0" left="20.0" right="20.0" top="30.0" /></padding>
                    <children>
                        <fx:include fx:id="sidebar" source="Sidebar.fxml" />
                    </children>
                </VBox>
            </left>

            <center>
                <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background: #FFF7EA; -fx-border-color: transparent;" BorderPane.alignment="CENTER">
                    <content>
                        <VBox alignment="CENTER" spacing="25.0" style="-fx-background-color: #FFF7EA;">
                            <padding><Insets bottom="30.0" left="50.0" right="50.0" top="30.0" /></padding>

                            <Label text="Post A Trip Request" textFill="#1e3a5f" underline="true">
                                <font><Font name="System Bold" size="26.0" /></font>
                            </Label>

                            <GridPane hgap="20.0" vgap="20.0">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="ALWAYS" percentWidth="35.0" />
                                    <ColumnConstraints hgrow="ALWAYS" percentWidth="15.0" />
                                    <ColumnConstraints hgrow="ALWAYS" percentWidth="50.0" />
                                </columnConstraints>

                                <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                    <Label text="Destination"><font><Font name="System Bold" size="15.0" /></font></Label>
                                    <TextField fx:id="destinationField" promptText="Barcelona" style="-fx-background-radius: 10; -fx-border-color: black; -fx-border-radius: 10;">
                                        <font><Font size="14.0" /></font>
                                    </TextField>
                                </VBox>

                                <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                    <Label text="Days"><font><Font name="System Bold" size="15.0" /></font></Label>
                                    <Spinner fx:id="daysSpinner" editable="true" style="-fx-background-radius: 10; -fx-border-color: black; -fx-border-radius: 10;" />
                                </VBox>

                                <VBox spacing="5.0" GridPane.columnIndex="2" GridPane.rowIndex="0">
                                    <Label text="Departure Location"><font><Font name="System Bold" size="15.0" /></font></Label>
                                    <TextField fx:id="departureField" promptText="Istanbul" style="-fx-background-radius: 10; -fx-border-color: black; -fx-border-radius: 10;">
                                        <font><Font size="14.0" /></font>
                                    </TextField>
                                </VBox>

                                <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                    <Label text="Average Budget"><font><Font name="System Bold" size="15.0" /></font></Label>
                                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                                        <TextField fx:id="budgetField" promptText="1000" style="-fx-background-radius: 10; -fx-border-color: black; -fx-border-radius: 10;" HBox.hgrow="ALWAYS">
                                            <font><Font size="14.0" /></font>
                                        </TextField>
                                        <Label text="in"><font><Font name="System Bold" size="14.0" /></font></Label>
                                        <ChoiceBox fx:id="currencyChoiceBox" prefWidth="70.0" style="-fx-background-radius: 10; -fx-border-color: black; -fx-border-radius: 10;" />
                                    </HBox>
                                </VBox>

                                <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <Label text="Mate Count"><font><Font name="System Bold" size="15.0" /></font></Label>
                                    <Spinner fx:id="mateCountSpinner" editable="true" style="-fx-background-radius: 10; -fx-border-color: black; -fx-border-radius: 10;" />
                                </VBox>

                                <VBox spacing="5.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
                                    <Label text="Date"><font><Font name="System Bold" size="15.0" /></font></Label>
                                    <DatePicker fx:id="datePicker" promptText="29-10-2025" style="-fx-background-radius: 10; -fx-border-color: black; -fx-border-radius: 10;" maxWidth="Infinity" />
                                </VBox>
                                <rowConstraints>
                                    <RowConstraints />
                                    <RowConstraints />
                                </rowConstraints>
                            </GridPane>

                            <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                                <Label text="Additional Notes"><font><Font name="System Bold" size="15.0" /></font></Label>
                                <TextArea fx:id="notesArea" prefHeight="120.0" promptText="I'm planning a budget-friendly trip..." style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: black;" wrapText="true">
                                    <font><Font size="14.0" /></font>
                                </TextArea>
                            </VBox>

                            <VBox spacing="5.0">
                                <Label text="Add Itineraries"><font><Font name="System Bold" size="15.0" /></font></Label>
                                <TextField fx:id="itinerariesField" promptText="Sagrada Familia, Museo Picasso" style="-fx-background-radius: 10; -fx-border-color: black; -fx-border-radius: 10;">
                                    <font><Font size="14.0" /></font>
                                </TextField>
                            </VBox>
                            <Label fx:id="statusLabel" alignment="CENTER" text="" visible="false">
                                <font><Font name="System Bold" size="16.0" /></font>
                                <VBox.margin><Insets bottom="10.0" /></VBox.margin>
                            </Label>
                            <HBox alignment="CENTER_RIGHT">
                                <Button onAction="#handleSubmit" style="-fx-background-color: #CCFF00; -fx-background-radius: 20; -fx-border-color: BLACK; -fx-border-radius: 20; -fx-border-width: 2;" text="Submit">
                                    <font><Font name="System Bold" size="18.0" /></font>
                                    <padding><Insets bottom="10.0" left="40.0" right="40.0" top="10.0" /></padding>
                                    <effect><DropShadow color="#00000033" offsetX="3.0" offsetY="3.0" /></effect>
                                </Button>

                            </HBox>
                        </VBox>
                    </content>
                </ScrollPane>
            </center>

        </BorderPane>
    </children>
</StackPane>