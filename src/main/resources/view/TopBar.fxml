<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER" prefHeight="80.0" prefWidth="1280.0" style="-fx-background-color: #1E3A5F;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.travelmate.travelmate.controller.TopBarController">
    <children>
        <Button onAction="#handleHomeButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="120.0" style="-fx-background-color: #CCFF00; -fx-background-radius: 30; -fx-font-weight: bold;" text="HOME">
            <font><Font size="20.0" /></font>
            <effect><DropShadow offsetX="3.0" offsetY="3.0" radius="0.0" width="0.0" /></effect>
        </Button>
        <Region HBox.hgrow="ALWAYS" />
        <Label text="TravelMate" textFill="#ccff00">
            <font><Font name="System Bold" size="40.0" /></font>
            <effect><DropShadow offsetX="3.0" offsetY="3.0" radius="0.0" /></effect>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
        <HBox alignment="CENTER" spacing="15.0">
            <children>
                <Circle fill="#ccff00" radius="25.0" stroke="BLACK" strokeType="INSIDE" />
                <VBox alignment="CENTER_LEFT">
                    <children>
                        <Label fx:id="userNameLabel" text="Loading..." textFill="WHITE">
                            <font><Font name="System Bold" size="18.0" /></font>
                        </Label>
                        <Label fx:id="userLevelLabel" text="Lvl. --" textFill="#b9b9b9">
                            <font><Font size="14.0" /></font>
                        </Label>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
    <padding><Insets left="30.0" right="30.0" /></padding>
</HBox>