<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="70.0" prefWidth="1280.0" style="-fx-background-color: #253A63; -fx-border-color: #253A63; -fx-border-width: 0 0 2 0;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.travelmate.travelmate.controller.TopBarController">
    <children>
        <ImageView fitHeight="60.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="CENTER">
            <image><Image url="@../images/logoWhite.png" /></image>
            <effect><DropShadow color="#00000050" offsetX="4.0" offsetY="4.0" radius="5.0" /></effect>
        </ImageView>
        <BorderPane pickOnBounds="false" prefHeight="100.0" prefWidth="1280.0">
            <left>
                <Button mnemonicParsing="false" onAction="#handleHomeButton" onMousePressed="#handleMousePressed" onMouseReleased="#handleMouseReleased" prefHeight="50.0" prefWidth="120.0" style="-fx-background-color: #CCFF00; -fx-background-radius: 30; -fx-text-fill: #253A63; -fx-border-color: transparet; -fx-border-radius: 30; -fx-border-width: 2; -fx-cursor: hand;" text="HOME" BorderPane.alignment="CENTER">
                    <font><Font name="League Spartan Bold" size="20.0" /></font>
                    <effect><DropShadow height="1.0" offsetY="6.0" radius="0.0" width="1.0">
                     <color>
                        <Color red="0.7990133166313171" green="0.8299999833106995" blue="0.365200012922287" />
                     </color></DropShadow></effect>
                </Button>
            </left>
            <right>
                <HBox alignment="CENTER" onMouseClicked="#handleProfileClick" spacing="15.0" style="-fx-cursor: hand;" BorderPane.alignment="CENTER">
                    <children>
                        <Circle fx:id="profileImageCircle" fill="#cccccc" radius="28.0" stroke="WHITE" strokeType="INSIDE" strokeWidth="2.0" />
                        <VBox alignment="CENTER_LEFT">
                            <children>
                                <Label fx:id="userNameLabel" text="Loading..." textFill="WHITE">
                                    <font><Font name="League Spartan Bold" size="18.0" /></font>
                                </Label>
                                <Label fx:id="userLevelLabel" opacity="0.9" text="Lvl. --" textFill="#CCFF00">
                                    <font><Font name="League Spartan Bold" size="14.0" /></font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </right>
            <padding><Insets left="30.0" right="30.0" /></padding>
        </BorderPane>
    </children>
</StackPane>
