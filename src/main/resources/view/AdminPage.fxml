<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.travelmate.travelmate.controller.AdminPageController">
    <children>
        <BorderPane fx:id="mainContainer" style="-fx-background-color: #FFF7EA;">

            <top>
                <fx:include source="TopBar.fxml" />
            </top>

            <left>
                <VBox prefHeight="640.0" prefWidth="300.0" spacing="10.0" BorderPane.alignment="CENTER">
                    <padding><Insets bottom="20.0" left="20.0" right="20.0" top="30.0" /></padding>
                    <children>
                        <fx:include fx:id="sidebar" source="Sidebar.fxml" />
                    </children>
                </VBox>
            </left>

            <center>
                <ScrollPane fitToWidth="true" style="-fx-background: #FFF7EA; -fx-background-color: transparent; -fx-border-color: transparent;" BorderPane.alignment="CENTER">
                    <content>
                        <VBox spacing="30.0" style="-fx-background-color: #FFF7EA;">
                            <padding><Insets bottom="30.0" left="40.0" right="40.0" top="30.0" /></padding>

                            <VBox spacing="5.0">
                                <Label text="ADMIN PAGE" textFill="#1e3a5f" underline="true">
                                    <font><Font name="System Bold" size="28.0" /></font>
                                </Label>
                                <Label text="CHANNEL APPROVALS" textFill="#5e5e5e">
                                    <font><Font name="System Bold" size="20.0" /></font>
                                </Label>
                            </VBox>

                            <VBox fx:id="approvalsContainer" spacing="20.0">
                                <Label text="WAITING INPUTS" textFill="#1e3a5f">
                                    <font><Font name="System Bold" size="18.0" /></font>
                                </Label>
                            </VBox>

                        </VBox>
                    </content>
                </ScrollPane>
            </center>
        </BorderPane>
    </children>
</StackPane>