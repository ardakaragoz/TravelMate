<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.travelmate.travelmate.controller.EditProfileController">
    <children>
        <BorderPane fx:id="mainContainer" style="-fx-background-color: #FFF7EA;">

            <top>
                <fx:include source="TopBar.fxml" />
            </top>

            <left>
                <VBox prefHeight="640.0" prefWidth="300.0" spacing="10.0" BorderPane.alignment="CENTER">
                    <padding><Insets bottom="20.0" left="20.0" right="20.0" top="30.0" /></padding>
                    <children>
                        <fx:include source="Sidebar.fxml" />
                    </children>
                </VBox>
            </left>

            <center>
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background: #FFF7EA; -fx-border-color: transparent;" BorderPane.alignment="CENTER">
                    <content>
                        <VBox spacing="20.0" style="-fx-background-color: #FFF7EA;">
                            <padding><Insets bottom="30.0" left="40.0" right="40.0" top="30.0" /></padding>

                            <Label text="Edit Profile" textFill="#1e3a5f" underline="true">
                                <font><Font name="System Bold" size="28.0" /></font>
                            </Label>

                            <HBox alignment="CENTER_LEFT" spacing="20.0">
                                <children>
                                    <StackPane>
                                        <children>
                                            <Circle fx:id="profileImageCircle" fill="DODGERBLUE" radius="50.0" stroke="BLACK" strokeType="INSIDE" />
                                        </children>
                                        <effect><DropShadow color="#00000033" offsetX="3.0" offsetY="3.0" /></effect>
                                    </StackPane>
                                    <Button style="-fx-background-color: WHITE; -fx-border-color: #1E3A5F; -fx-border-radius: 10; -fx-background-radius: 10;" text="Change Photo">
                                        <font><Font name="System Bold" size="14.0" /></font>
                                    </Button>
                                </children>
                            </HBox>

                            <VBox spacing="15.0" maxWidth="800.0">
                                <children>

                                    <VBox spacing="5.0">
                                        <Label text="Full Name"><font><Font name="System Bold" size="16.0" /></font></Label>
                                        <TextField fx:id="fullNameField" promptText="Enter full name" style="-fx-background-radius: 10; -fx-border-color: black; -fx-border-radius: 10;">
                                            <font><Font size="14.0" /></font>
                                        </TextField>
                                    </VBox>

                                    <VBox spacing="5.0">
                                        <Label text="Username"><font><Font name="System Bold" size="16.0" /></font></Label>
                                        <TextField fx:id="usernameField" promptText="Enter username" style="-fx-background-radius: 10; -fx-border-color: black; -fx-border-radius: 10;">
                                            <font><Font size="14.0" /></font>
                                        </TextField>
                                    </VBox>

                                    <VBox spacing="5.0">
                                        <Label text="Biography"><font><Font name="System Bold" size="16.0" /></font></Label>
                                        <TextArea fx:id="bioArea" prefHeight="100.0" promptText="Tell us about yourself..." style="-fx-background-radius: 10; -fx-border-color: black; -fx-border-radius: 10;" wrapText="true">
                                            <font><Font size="14.0" /></font>
                                        </TextArea>
                                    </VBox>

                                    <VBox spacing="5.0">
                                        <Label text="Select Your Main Hobby"><font><Font name="System Bold" size="16.0" /></font></Label>
                                        <ComboBox fx:id="hobbyComboBox" maxWidth="Infinity" promptText="Choose a hobby..." style="-fx-background-color: white; -fx-border-color: black; -fx-border-radius: 10; -fx-background-radius: 10; -fx-font-size: 14px;" />
                                    </VBox>

                                    <VBox spacing="5.0">
                                        <Label text="Favorite Trip Type"><font><Font name="System Bold" size="16.0" /></font></Label>
                                        <ComboBox fx:id="tripTypeComboBox" maxWidth="Infinity" promptText="Choose a trip type..." style="-fx-background-color: white; -fx-border-color: black; -fx-border-radius: 10; -fx-background-radius: 10; -fx-font-size: 14px;" />
                                    </VBox>

                                </children>
                            </VBox>

                            <HBox alignment="CENTER_LEFT" spacing="20.0">
                                <children>
                                    <Button onAction="#handleSaveButton" style="-fx-background-color: #CCFF00; -fx-background-radius: 20; -fx-border-color: BLACK; -fx-border-radius: 20; -fx-border-width: 2;" text="Save Changes">
                                        <font><Font name="System Bold" size="16.0" /></font>
                                        <padding><Insets bottom="10.0" left="30.0" right="30.0" top="10.0" /></padding>
                                        <effect><DropShadow color="#00000033" offsetX="3.0" offsetY="3.0" /></effect>
                                    </Button>

                                    <Button onAction="#handleCancelButton" style="-fx-background-color: #FF6B6B; -fx-background-radius: 20; -fx-border-color: BLACK; -fx-border-radius: 20; -fx-border-width: 2;" text="Cancel" textFill="WHITE">
                                        <font><Font name="System Bold" size="16.0" /></font>
                                        <padding><Insets bottom="10.0" left="30.0" right="30.0" top="10.0" /></padding>
                                        <effect><DropShadow color="#00000033" offsetX="3.0" offsetY="3.0" /></effect>
                                    </Button>
                                </children>
                                <VBox.margin><Insets top="10.0" /></VBox.margin>
                            </HBox>

                        </VBox>
                    </content>
                </ScrollPane>
            </center>

        </BorderPane>
    </children>
</StackPane>