<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="350.0" prefWidth="300.0" spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.travelmate.travelmate.controller.SidebarController">
    <children>
        <Button fx:id="channelsButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleChannelsButton" prefHeight="55.0" style="-fx-background-color: WHITE; -fx-border-color: #253A63; -fx-border-width: 3; -fx-background-radius: 30; -fx-border-radius: 30; -fx-alignment: CENTER; -fx-text-fill: #253A63;" text="Channels     &gt;">
            <font><Font name="System Bold" size="20.0" /></font>
            <effect><DropShadow color="#00000033" offsetX="5.0" offsetY="5.0" radius="0.0" /></effect>
        </Button>

        <Button fx:id="myTripsButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleMyTripsButton" prefHeight="55.0" style="-fx-background-color: WHITE; -fx-border-color: #253A63; -fx-border-width: 3; -fx-background-radius: 30; -fx-border-radius: 30; -fx-alignment: CENTER; -fx-text-fill: #253A63;" text="My Trips      &gt;">
            <font><Font name="System Bold" size="20.0" /></font>
            <effect><DropShadow color="#00000033" offsetX="5.0" offsetY="5.0" radius="0.0" /></effect>
        </Button>

        <Button fx:id="postTripButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#handlePostTripButton" prefHeight="55.0" style="-fx-background-color: WHITE; -fx-border-color: #253A63; -fx-border-width: 3; -fx-background-radius: 30; -fx-border-radius: 30; -fx-alignment: CENTER; -fx-text-fill: #253A63;" text="Post Trip     &gt;">
            <font><Font name="System Bold" size="20.0" /></font>
            <effect><DropShadow color="#00000033" offsetX="5.0" offsetY="5.0" radius="0.0" /></effect>
        </Button>
          <Button fx:id="chatButton" maxWidth="300.0" mnemonicParsing="false" onAction="#handleChatButton" prefHeight="55.0" prefWidth="300.0" style="-fx-background-color: WHITE; -fx-border-color: #253A63; -fx-border-width: 3; -fx-background-radius: 30; -fx-border-radius: 30; -fx-alignment: CENTER_LEFT; -fx-text-fill: #253A63;" text="          Chat            &gt;">
              <font>
            <Font name="System Bold" size="20.0" />
         </font>
              <padding>
            <Insets left="30.0" />
         </padding>
              <effect>
            <DropShadow color="#00000033" offsetX="5.0" offsetY="5.0" radius="0.0" />
         </effect>
          </Button>
    </children>
</VBox>
